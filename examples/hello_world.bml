use Boostrapt as b

<body> {
    <head> {
        title { "Hello, World!" }
    }
    <body> {
        <input#filter>

        <div> {
            [ "Hello", ", World!" ]
        }

        on(#filter.onchange) {
            div {
                get("info").map (n) {
                    span { n }
                }
            }
        }
    }
}